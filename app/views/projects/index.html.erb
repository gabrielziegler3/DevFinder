<p id="notice"><%= notice %></p>

<h1>Projects</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Company</th>
      <th>Description</th>
      <th>Skill</th>
      <th>People Working</th>
      <th>People Needed</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @projects.each do |project| %>
      <tr>
        <td><%= project.name %></td>
        <td><%= project.company %></td>
        <td><%= project.description %></td>
        <td><%= project.skill %></td>
        <td><%= project.peopleWorking %></td>
        <td><%= project.peopleNeeded %></td>
        <td><%= link_to 'Show', project, class: "btn btn-link" %></td>
        <td><%= link_to 'Edit', edit_project_path(project), class: "btn btn-link" %></td>
        <td><%= link_to 'Destroy', project, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-link" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Project', new_project_path, class: "btn btn-link" %>
