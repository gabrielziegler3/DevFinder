<% if user_signed_in? %>
    <%= link_to 'New Project', new_project_path, class: "btn btn-primary" %>
    <br><br>
<% end %>
<div class ="center">
    <div class="row">
        <% @projects.each do |project| %>
        <div class="col-md-3">
            <div class="thumbnail">
                <%= link_to image_tag(project.image.url(:medium)), project %>
                <div class="caption">
                    <h3><%= project.name %></h3>
                    <p><%= "Company: " + project.company %></p>
                    <p><%= "Language: " + project.skill %></p>
                    <p><%= "Group Size: " + project.peopleWorking.to_s %></p>
                    <p><%= "Members Needed: " + project.peopleNeeded.to_s %></p>
                    <p><%= "Location: " + project.location.to_s %></p>
                    <p><%= "Project Owner: " + project.user.name.to_s %></p>
                    <% if (user_signed_in?) && (current_user == project.user) %>
                        <%= link_to 'Edit', edit_project_path(project), class: "btn btn-link" %>
                        <%= link_to 'Destroy', project, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-link" %>
                    <% end %>
                </div>
            </div>
        </div>
        <% end %>
    </div>
</div>

<br>


