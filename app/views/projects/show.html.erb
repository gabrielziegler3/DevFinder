<div class="row">
    <div class="col-md-6">
        <div class="thumbnail">
        <%= image_tag @project.image.url %>
        </div>
    </div>
    <div class="col-md-6">
        <h3><%= @project.name %></h3><br>
        <p><%= "Company: " + @project.company %></p>
        <p><%= "Skill: " + @project.skill %></p>
        <p><%= "Group Size: " + @project.peopleWorking.to_s %></p>
        <p><%= "Members Needed: " + @project.peopleNeeded.to_s %></p>
        <p><%= "Location: " + @project.location.to_s %></p>
        <br><br><br><br>
        <p><%= "Description: " + @project.description %></p>
        <br>
        <div class= "center">
            <% if current_user != @project.user %>
                <%= link_to "Apply Now", new_project_apply_path(@project), class: "btn btn-primary" %>
            <% end %>
        </div>
    </div>
</div>


