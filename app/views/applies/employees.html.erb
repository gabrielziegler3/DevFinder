<div class ="center">
    <h2> People Interested In Your Projects: </h2>
</div>

<table class= "table table-striped table-bordered">
    <tr>
        <th class="center"> Image</th>
        <th class="center"> Project</th>
        <th class="center"> Skill</th>
        <th class="center"> Person Interested</th>
        <th class="center"> Date Of Apply</th>
    </tr>


        <% @applies.each do |apply| %>
        <tr>
            <td class="center"><%= image_tag apply.project.image.url(:thumb) %></td>
            <td class="center"><%= apply.project.name %></td>
            <td class="center"><%= apply.project.skill %></td>
            <td class="center"><%= apply.interested.name %></td>
            <td class="center"><%= apply.created_at.strftime("%B %-d, %Y") %></td>
        </tr>
        <% end %>
</table>
